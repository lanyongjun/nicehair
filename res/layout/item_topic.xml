<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12.5dip"
        android:layout_marginTop="12.5dip"
        android:paddingLeft="20.5dip"
        android:paddingRight="20.5dip" >

        <com.lan.nicehair.common.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res/com.lan.nicehair"
            android:id="@+id/iv_zone_item_profile"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="7.5dip"
            android:background="@drawable/zone_list_profile" />

        <LinearLayout
            android:id="@+id/layout_zone_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1.5dip"
            android:layout_toRightOf="@+id/iv_zone_item_profile"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_zone_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.0dip"
                android:paddingRight="5dip"
                android:textColor="@color/zone_list_username"
                android:textSize="13.0sp" />

            <ImageView
                android:id="@+id/iv_zone_item_authority_icon"
                android:layout_width="24.0dip"
                android:layout_height="16.0dip"
                android:layout_marginLeft="-52.0dip"
                android:layout_marginRight="4.0dip"
                android:background="@drawable/authority_icon"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_zone_item_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rank_level_bg"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_zone_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_zone_item_title"
            android:layout_toRightOf="@+id/iv_zone_item_profile"
            android:textColor="@color/zone_list_time"
            android:textSize="13.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.0dip"
        android:orientation="horizontal"
        android:paddingLeft="20.5dip" >

        <TextView
            android:id="@+id/tv_zone_item_top"
            android:layout_width="33.0dip"
            android:layout_height="20.5dip"
            android:layout_marginLeft="5.5dip"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/zone_list_top_bg"
            android:gravity="center"
            android:text="@string/zone_list_top"
            android:textColor="@color/white"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/tv_zone_item_tab"
            android:layout_width="wrap_content"
            android:layout_height="23.0dip"
            android:layout_marginBottom="3.0dip"
            android:layout_marginRight="2.5dip"
            android:background="@drawable/btn_tab_bg"
            android:gravity="center"
            android:minWidth="42.0dip"
            android:paddingLeft="2.0dip"
            android:paddingRight="9.0dip"
            android:textColor="@color/white"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/tv_zone_item_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.5dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/zone_list_content"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_zone_item_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.lan.nicehair.common.SquareImageView
            android:id="@+id/iv_zone_item_img1"
            android:layout_width="107.79999dip"
            android:layout_height="107.79999dip"
            android:scaleType="centerCrop" />

        <com.lan.nicehair.common.SquareImageView
            android:id="@+id/iv_zone_item_img2"
            android:layout_width="107.79999dip"
            android:layout_height="107.79999dip"
            android:scaleType="centerCrop" />

        <com.lan.nicehair.common.SquareImageView
            android:id="@+id/iv_zone_item_img3"
            android:layout_width="107.79999dip"
            android:layout_height="107.79999dip"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="33.5dip"
        android:layout_marginBottom="16.5dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/topic_button_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_zone_item_share"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="21.0dip"
                android:layout_height="19.5dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/btn_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zone_list_share"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.5dip"
            android:layout_marginTop="5.5dip"
            android:background="@color/zone_item_button_line" />

        <LinearLayout
            android:id="@+id/layout_zone_item_collection"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_zone_item_collection"
                android:layout_width="22.5dip"
                android:layout_height="19.5dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/collection_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zone_list_colletion"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.5dip"
            android:layout_marginTop="5.5dip"
            android:background="@color/zone_item_button_line" />

        <LinearLayout
            android:id="@+id/layout_zone_item_like"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_zone_item_like"
                android:layout_width="19.5dip"
                android:layout_height="20.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/like_icon" />

            <TextView
                android:id="@+id/tv_zone_item_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.5dip"
            android:layout_marginTop="5.5dip"
            android:background="@color/zone_item_button_line" />

        <LinearLayout
            android:id="@+id/layout_zone_item_comment"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/btn_comment" />

            <TextView
                android:id="@+id/tv_zone_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/zone_list_button"
                android:textSize="15.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_zone_item_comm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_topic_item1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="7.0dip" >

            <com.lan.nicehair.common.CircleImageView
                android:id="@+id/iv_topic_item_profile1"
                android:layout_width="20.5dip"
                android:layout_height="20.5dip"
                android:layout_marginLeft="20.5dip"
                android:layout_marginRight="4.0dip"
                android:background="@drawable/comment_list_profile" />

            <TextView
                android:id="@+id/tv_topic_item_comment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.5dip"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:layerType="software"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_topic_item2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="7.0dip" >

            <com.lan.nicehair.common.CircleImageView
                android:id="@+id/iv_topic_item_profile2"
                android:layout_width="20.5dip"
                android:layout_height="20.5dip"
                android:layout_marginLeft="20.5dip"
                android:layout_marginRight="4.0dip"
                android:background="@drawable/comment_list_profile" />

            <TextView
                android:id="@+id/tv_topic_item_comment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.5dip"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:layerType="software"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_topic_item3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.lan.nicehair.common.CircleImageView
                android:id="@+id/iv_topic_item_profile3"
                android:layout_width="20.5dip"
                android:layout_height="20.5dip"
                android:layout_marginLeft="20.5dip"
                android:layout_marginRight="4.0dip"
                android:background="@drawable/comment_list_profile" />

            <TextView
                android:id="@+id/tv_topic_item_comment3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.5dip"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:layerType="software"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>