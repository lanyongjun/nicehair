<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_zone_item_divider"
        android:layout_width="fill_parent"
        android:layout_height="12.5dip"
        android:background="@color/zone_bg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12.5dip"
        android:layout_marginTop="12.5dip"
        android:paddingLeft="20.5dip"
        android:paddingRight="20.5dip" >

        <com.app.choumei.hairstyle.common.MyImageView
            android:id="@+id/iv_zone_item_profile"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7.5dip"
            android:background="@drawable/zone_list_profile" />

        <LinearLayout
            android:id="@+id/layout_zone_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5.5dip"
            android:layout_toRightOf="@+id/iv_zone_item_profile"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_zone_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.0dip"
                android:paddingRight="52.5dip"
                android:textColor="@color/zone_list_username"
                android:textSize="13.0sp" />

            <ImageView
                android:id="@+id/iv_zone_item_authority_icon"
                android:layout_width="24.0dip"
                android:layout_height="15.0dip"
                android:layout_marginLeft="-52.5dip"
                android:layout_marginRight="3.0dip"
                android:background="@drawable/authority_icon" />

            <TextView
                android:id="@+id/tv_zone_item_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-25.5dip"
                android:background="@drawable/rank_level_bg"
                android:gravity="center"
                android:paddingBottom="3.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="3.0dip"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_zone_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_zone_item_title"
            android:layout_toRightOf="@+id/iv_zone_item_profile"
            android:textColor="@color/zone_list_time"
            android:textSize="13.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.0dip"
        android:orientation="horizontal"
        android:paddingLeft="20.5dip" >

        <TextView
            android:id="@+id/tv_zone_item_top"
            android:layout_width="33.0dip"
            android:layout_height="20.5dip"
            android:layout_marginLeft="5.5dip"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/zone_list_top_bg"
            android:gravity="center"
            android:text="@string/zone_list_top"
            android:textColor="@color/white"
            android:textSize="13.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_zone_item_tab"
            android:layout_width="wrap_content"
            android:layout_height="23.0dip"
            android:layout_marginBottom="3.0dip"
            android:layout_marginRight="2.5dip"
            android:background="@drawable/btn_tab_bg"
            android:gravity="center"
            android:minWidth="42.0dip"
            android:paddingLeft="2.0dip"
            android:paddingRight="9.0dip"
            android:textColor="@color/white"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/tv_zone_item_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4.5dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/zone_list_content"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_zone_item_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12.5dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <com.app.choumei.hairstyle.common.MyImageView
            android:id="@+id/iv_zone_item_img1"
            android:layout_width="107.79999dip"
            android:layout_height="107.79999dip"
            android:scaleType="centerCrop" />

        <com.app.choumei.hairstyle.common.MyImageView
            android:id="@+id/iv_zone_item_img2"
            android:layout_width="107.79999dip"
            android:layout_height="107.79999dip"
            android:scaleType="centerCrop" />

        <com.app.choumei.hairstyle.common.MyImageView
            android:id="@+id/iv_zone_item_img3"
            android:layout_width="107.79999dip"
            android:layout_height="107.79999dip"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>